<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import java.lang.String?>
<VBox alignment="CENTER" minWidth="200.0" styleClass="drawer_background" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.schoolmanagermvn.controllers.NavDrawerController">
    <stylesheets>
<!--        <String fx:value="/com/marrok/schoolmanagermvn/css/spec/darcula.css"/>-->
        <String fx:value="/com/marrok/schoolmanagermvn/css/all.css"/>
    </stylesheets>
    <children>
        <JFXButton fx:id="dashboard_btn" alignment="CENTER" contentDisplay="TOP" focusTraversable="false" graphicTextGap="15.0" minWidth="200.0" onAction="#goDashboard" styleClass="jfxbtn" text="Dashboard">
            <graphic>
                <FontIcon iconLiteral="fa-dashboard" iconColor="white" iconSize="24"/>
            </graphic>
        </JFXButton>
        <JFXButton fx:id="students_btn" alignment="CENTER" focusTraversable="false" graphicTextGap="15.0" layoutX="10.0" layoutY="10.0" minWidth="200.0" onAction="#goStudents" styleClass="jfxbtn" text="Students">
            <graphic>
                <FontIcon iconLiteral="fa-users" iconColor="white" iconSize="24"/>
            </graphic>
        </JFXButton>
        <JFXButton fx:id="classes_btn" focusTraversable="false" graphicTextGap="15.0" layoutX="10.0" layoutY="45.0" minWidth="200.0" ripplerFill="WHITE" styleClass="jfxbtn" text="Classes">
            <graphic>
                <FontIcon iconLiteral="fa-university" iconColor="white" iconSize="24"/>
            </graphic>
        </JFXButton>
        <JFXButton fx:id="timetable_btn" focusTraversable="false" graphicTextGap="15.0" layoutX="10.0" layoutY="80.0" minWidth="200.0" ripplerFill="WHITE" styleClass="jfxbtn" text="Timetable">
            <graphic>
                <FontIcon iconLiteral="fa-calendar" iconColor="white" iconSize="24"/>
            </graphic>
        </JFXButton>
        <JFXButton fx:id="setting_btn" focusTraversable="false" graphicTextGap="15.0" layoutX="10.0" layoutY="115.0" minWidth="200.0" ripplerFill="WHITE" styleClass="jfxbtn" text="Settings">
            <graphic>
                <FontIcon iconLiteral="fa-cog" iconColor="white" iconSize="24"/>
            </graphic>
        </JFXButton>
    </children>
</VBox>
